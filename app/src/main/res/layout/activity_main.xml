<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">



    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="25dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="kajeean."
                            android:textColor="@color/defautRed"
                            android:textSize="27dp" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_gotosettings"
                            android:layout_width="39dp"
                            android:layout_height="39dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="14dp"
                            app:cardBackgroundColor="@color/gray"
                            app:cardCornerRadius="1000dp"
                            app:cardElevation="3dp"
                            app:strokeWidth="0dp">

                            <ImageView
                                android:id="@+id/img_top_gotosettings"
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </com.google.android.material.card.MaterialCardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/card_top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        >

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_top"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="@color/darkerdefautRed"
                            app:cardElevation="4dp"
                            android:layout_margin="12dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient_red" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:src="@drawable/ic_baseline_access_time_filled_24"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/tv_ustadzname_topcard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:layout_marginStart="22dp"
                                    android:layout_marginTop="22dp"
                                    android:layout_marginEnd="22dp"

                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Ustadz Khalid Basalamah"
                                    android:textColor="@color/gray2" />

                                <TextView
                                    android:id="@+id/tv_judulkajianawok"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_ustadzname_topcard"
                                    android:layout_marginStart="22dp"

                                    android:layout_marginEnd="22dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Kajian Tafsir: Al- Fatihah "
                                    android:textColor="@color/white"
                                    android:textSize="22dp" />

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/card_waktu_topcard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginEnd="22dp"
                                    android:layout_marginBottom="15dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:layout_alignParentEnd="true"
                                    android:text="Kajian Tafsir: Al- Fatihah "
                                    app:cardBackgroundColor="@color/white"
                                    app:strokeWidth="0dp"
                                    app:cardCornerRadius="8dp"
                                    >
                                    <TextView
                                        android:id="@+id/tv_hour"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginVertical="4dp"
                                        android:layout_marginHorizontal="8dp"
                                        android:fontFamily="@font/roboto_light"
                                        android:text="10:30"
                                        android:textColor="@color/darkerdefautRed"
                                        android:textSize="12dp" />
                                </com.google.android.material.card.MaterialCardView>
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginBottom="15dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:layout_toLeftOf="@+id/card_waktu_topcard"
                                    app:cardBackgroundColor="@color/white"
                                    app:strokeWidth="0dp"
                                    app:cardCornerRadius="8dp"
                                    >
                                    <TextView
                                        android:id="@+id/tv_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginVertical="4dp"
                                        android:layout_marginHorizontal="8dp"
                                        android:fontFamily="@font/roboto_light"
                                        android:text="10 January 2022"
                                        android:textColor="@color/darkerdefautRed"
                                        android:textSize="12dp" />
                                </com.google.android.material.card.MaterialCardView>

                            </RelativeLayout>


                        </com.google.android.material.card.MaterialCardView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/poppins_bold"
                            android:paddingTop="4dp"
                            android:text="Asatidz"
                            android:textSize="16dp" />
                        <com.google.android.material.card.MaterialCardView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="14dp"
                            app:cardBackgroundColor="@color/defautRed"
                            app:strokeWidth="0dp"
                            app:cardElevation="4dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:layout_marginVertical="3dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Followed"
                                android:padding="2dp"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_listasatidz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_avmain_listustadz" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Kajian Tersedia"
                            android:layout_centerVertical="true"
                            android:paddingTop="4dp"
                            android:textSize="16dp" />
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/goto_favourites"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="14dp"
                            app:cardBackgroundColor="@color/defautRed"
                            app:strokeWidth="0dp"

                            app:cardElevation="4dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:layout_marginVertical="3dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Favourites"
                                android:padding="2dp"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_kajian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_avmain_listkajian" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

<RelativeLayout
    app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_gotoAddKajian"

        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Tambah Kajian"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/mainColor"
        android:elevation="12dp"
        />
</RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>





