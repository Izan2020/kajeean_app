<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/swipeContainer"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.UpdateUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/avSettings_RL_topmenu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="52dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_medium"
                android:text="Edit Profile"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/avSettings_img_btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/avSettings_img_btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_check_24"
                app:tint="@color/black" />
        </RelativeLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            app:cardCornerRadius="22dp"
            app:strokeWidth="0dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_marginHorizontal="32dp"
            android:orientation="vertical"
            android:layout_marginTop="32dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fullname"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/poppins_bold" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/poppins_light"
                    android:textSize="25dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Me"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/poppins_bold" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_description"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:text=""
                    android:fontFamily="@font/poppins_light"
                    android:textSize="20dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:text="Email"
                    android:fontFamily="@font/poppins_bold" />
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/update_email"
                    android:text=""
                    android:fontFamily="@font/poppins_light"

                    android:textSize="18dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:text="Phone Number"
                    android:fontFamily="@font/poppins_bold" />
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/update_phonenumber"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="18dp"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:text="City / State"
                    android:fontFamily="@font/poppins_bold" />
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/update_city"
                    android:text=""
                    android:fontFamily="@font/poppins_light"
                    android:textSize="18dp"

                    />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>