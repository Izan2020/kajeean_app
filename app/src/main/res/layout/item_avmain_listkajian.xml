<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="8dp"
        app:strokeWidth="0dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="12dp"
                >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <com.google.android.material.card.MaterialCardView
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       app:strokeWidth="0dp"
                       android:layout_gravity="center_vertical">
                       <ImageView
                           android:id="@+id/img_ustadz"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                            android:scaleType="fitXY"
                           />
                   </com.google.android.material.card.MaterialCardView>
                   <TextView
                       android:id="@+id/tv_nameustadz"
                       android:layout_width="wrap_content"
                       android:layout_height="22dp"
                       android:text="Ustadz Khalid Basalamah"
                       android:gravity="center_vertical"
                       android:fontFamily="@font/poppins_light"
                       android:layout_marginStart="8dp"
                       android:paddingTop="2dp"
                       android:textSize="10dp"
                       android:textColor="@color/gray"
                       />
               </LinearLayout>
                <TextView
                    android:id="@+id/tv_judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="189dp"
                    android:text="Kajian Tafsir : Al-Fatihah"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15dp"
                    android:layout_marginStart="2dp"
                    />
                <TextView
                    android:id="@+id/tv_deskripsi"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:text="Consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim "
                    android:fontFamily="@font/poppins_light"
                    android:textSize="10dp"
                    android:layout_marginStart="2dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="5dp"

                android:fontFamily="@font/poppins_light"
                android:text="Pasar Rebo, Jakarta Timur"
                android:textColor="@color/defautRed"
                android:textSize="11dp" />


            <ImageView
                android:id="@+id/img_poster"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@color/white"
                app:strokeWidth="0dp" />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                app:strokeWidth="0dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="6dp"
                >
                <TextView
                    android:id="@+id/tv_timestart"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:text="10:30 - 11:00"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:layout_marginVertical="4dp"
                    android:layout_marginHorizontal="6dp"
                    android:fontFamily="@font/poppins_medium"

                    />
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>