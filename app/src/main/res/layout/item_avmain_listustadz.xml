<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_ustadz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="13dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="0dp"
        app:cardElevation="3dp"
        >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <com.google.android.material.card.MaterialCardView
               android:id="@+id/item_avmain_card_iconUstadz"
               android:layout_width="45dp"
               android:layout_height="45dp"
               android:layout_centerVertical="true"
               android:layout_marginStart="12dp"
               app:strokeWidth="0dp">
            <ImageView
                android:id="@+id/icon_ustadz"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent">

            </ImageView>
           </com.google.android.material.card.MaterialCardView>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="12dp"
               android:layout_marginTop="12dp"
               android:layout_marginEnd="12dp"
               android:layout_marginBottom="12dp"
               android:layout_toRightOf="@id/item_avmain_card_iconUstadz"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/tv_nameustadz"
                   android:layout_width="wrap_content"
                   android:layout_height="22dp"
                   android:fontFamily="@font/poppins_bold"
                   android:text="Ustadz Khalid Basalamah"
                   android:textSize="15dp" />

               <TextView
                   android:id="@+id/total_kajian"
                   android:layout_width="wrap_content"
                   android:layout_height="22dp"
                   android:fontFamily="@font/poppins_light"
                   android:text="12 Kajian"
                   android:textColor="@color/gray"
                   android:textSize="12dp" />
           </LinearLayout>
       </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>