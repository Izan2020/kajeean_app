<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        app:strokeWidth="0dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="12dp">

                    <TextView
                        android:id="@+id/tv_nameustadz"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="Ustadz Khalid Basalamah"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/poppins_light"

                        android:paddingTop="2dp"
                        android:textSize="10dp"
                        android:textColor="@color/gray"
                        />

                <TextView
                    android:id="@+id/tv_judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kajian Tafsir : Al-Fatihah"

                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15dp"
                    android:layout_marginStart="2dp"
                    />
                <TextView
                    android:id="@+id/tv_deskripsi"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:text="Consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim "
                    android:fontFamily="@font/poppins_light"
                    android:textSize="10dp"
                    android:layout_marginStart="2dp"
                    />

            </LinearLayout>


            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="11dp"
                android:src="@drawable/ic_baseline_delete_24"
                app:tint="@color/defautRed" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>